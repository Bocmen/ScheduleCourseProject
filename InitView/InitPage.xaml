<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Style="{StaticResource StyleContentPage}"
             x:Class="InitView.InitPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Frame x:Name="connectIndicator" IsVisible="False" IsEnabled="False">
            <StackLayout>
                <Label Text="Подождите идёт подключение" HorizontalTextAlignment="Center"/>
                <ActivityIndicator IsRunning="true"/>
            </StackLayout>
        </Frame>
        <Button x:Name="Conect" Clicked="Conect_Clicked" Text="Подключение"/>
        <Label x:Name="errorLabel"/>
    </StackLayout>
</ContentPage>